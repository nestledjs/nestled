overwrite: true
schema: './api-schema.graphql'
documents:
  - 'libs/shared/sdk/src/graphql/**/*.graphql'
  - 'libs/shared/sdk/src/admin-graphql/**/*.graphql'
generates:
  libs/shared/sdk/src/generated/graphql.ts:
    config:
      withComponent: false
      withHOC: false
      withHooks: true
    plugins:
      - 'typescript'
      - 'typescript-operations'
      - 'typescript-react-apollo'

hooks:
  afterAllFileWrite:
    - prettier --write
