{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "AppSetup",
  "title": "",
  "type": "object",
  "properties": {
    "setupType": {
      "type": "string",
      "description": "Type of setup to create",
      "enum": ["api", "web", "both"],
      "x-prompt": {
        "message": "What type of setup do you want to create?",
        "type": "list",
        "items": [
          { "value": "api", "label": "API (Nest.js)" },
          { "value": "web", "label": "Web (Remix)" },
          { "value": "both", "label": "Both API and Web" }
        ]
      }
    }
  },
  "required": ["setupType"]
}
